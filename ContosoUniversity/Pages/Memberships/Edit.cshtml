@page
@model ContosoUniversity.Pages.Memberships.EditModel
@{
    ViewData["Title"] = "Edit Membership";
}

<h1>Edit Membership</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Membership.MemberID" />

            <div class="form-group">
                <label asp-for="Membership.Student1ID" class="control-label">Student 1</label>
                <select asp-for="Membership.Student1ID" class="form-control" asp-items="Model.StudentList"></select>
                <span asp-validation-for="Membership.Student1ID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Membership.Student2ID" class="control-label">Student 2</label>
                <select asp-for="Membership.Student2ID" class="form-control" asp-items="Model.StudentList"></select>
                <span asp-validation-for="Membership.Student2ID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="startDate">Subscription Start Date:</label>
                <input type="date" class="form-control" asp-for="Membership.SubscriptionStartDate" value="@DateTime.Today.ToString("yyyy-MM-dd")">
                <span asp-validation-for="Membership.SubscriptionStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="endDate">Subscription End Date:</label>
                <input type="date" class="form-control" asp-for="Membership.SubscriptionEndDate" min="@DateTime.Today.ToString("yyyy-MM-dd")">
                <span asp-validation-for="Membership.SubscriptionEndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
