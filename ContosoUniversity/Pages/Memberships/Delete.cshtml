@page
@model ContosoUniversity.Pages.Memberships.DeleteModel
@{
    ViewData["Title"] = "Delete Membership";
}

<h1>Delete Membership</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Student 1:
        </dt>
        <dd class="col-sm-10">
            @Model.Membership.Student1.FullName
        </dd>
        <dt class="col-sm-2">
            Student 2:
        </dt>
        <dd class="col-sm-10">
            @Model.Membership.Student2.FullName
        </dd>
        <dt class="col-sm-2">
            Subscription Start Date:
        </dt>
        <dd class="col-sm-10">
            @Model.Membership.SubscriptionStartDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Subscription End Date:
        </dt>
        <dd class="col-sm-10">
            @Model.Membership.SubscriptionEndDate.ToShortDateString()
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Membership.MemberID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
